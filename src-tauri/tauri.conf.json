{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "npm run start",
    "devPath": "http://localhost:3000",
    "distDir": "../src/"
  },
  "package": {
    "productName": "EmulatorJS Netplay Server",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "2024 EmulatorJS",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "org.emulatorjs.netplay.server",
      "longDescription": "Working netplay server for https://github.com/EmulatorJS/EmulatorJS",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "localhost",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "config.json",
        "*.js"
      ],
      "shortDescription": "Netplay server for EmulatorJS",
      "targets": "all",
      "windows": {
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        },
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "EmulatorJS Netplay Server",
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "minWidth": 200,
        "minHeight": 200,
        "width": 800,
        "transparent": false,
        "center": true,
        "visible": false,
        "label": "main"
      },
      {
        "title": "EmulatorJS Netplay Server | Loading...",
        "width": 600,
        "height": 500,
        "resizable": false,
        "decorations": false,
        "center": true,
        "url": "loading.html",
        "label": "splashscreen"
      }
    ]
  }
}
