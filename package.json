{
  "name": "netplay",
  "version": "1.0.0",
  "description": "yes",
  "main": "dist/app/app.js",
  "author": {
    "name": "EmulatorJS",
    "url": "https://github.com/emulatorjs"
  },
  "build": {
    "appId": "org.emulatorjs.netplay.server",
    "linux": {
      "target": [
        "appimage",
        "zip"
      ],
      "description": "A Netplay Server For EmulatorJS",
      "category": "Network;Game",
      "icon": "static/logo-light.png"
    },
    "win": {
      "target": [
        "zip",
        "portable"
      ],
      "icon": "static/icon.ico"
    }
  },
  "scripts": {
    "build:ts": "tsc",
    "dev:server": "esno --watch server/index.ts",
    "dev:app": "pnpm build:ts && electron ./dist/app/app.js",
    "dev": "pnpm dev:server",
    "build:app:windows": "pnpm build:ts && electron-builder --win --publish=never",
    "build:app:linux": "pnpm build:ts && electron-builder --linux --publish=never"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "esbuild": "^0.19.5",
    "express": "^4.18.2",
    "peer": "^1.0.1",
    "peerjs": "^1.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.10",
    "electron": "^27.0.4",
    "electron-builder": "^24.6.4",
    "esno": "^0.17.0",
    "typescript": "^5.2.2"
  }
}
