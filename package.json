{
  "name": "emulatorjs-netplay-server",
  "productName": "EmulatorJS Netplay Server",
  "version": "0.3.0",
  "main": "app.js",
  "bin": "server.js",
  "description": "A Netplay Server For EmulatorJS",
  "author": {
    "name": "EmulatorJS",
    "url": "https://github.com/EmulatorJS"
  },
  "pkg": {
    "scripts": "**/*.js",
    "assets": "**/*",
    "targets": [ "latest-linux-x64", "latest-win-x64"],
    "outputPath": "dist"
  },
  "build": {
    "appId": "org.emulatorjs.netplay.server",
    "linux": {
      "target": [
        "appimage",
        "zip"
      ],
      "description": "A Netplay Server For EmulatorJS",
      "category": "Network;Game",
      "icon" : "src/img/icon.png"

    },
    "win": {
      "target": [
        "zip",
        "portable"
      ],
      "icon" : "src/img/icon.ico"
    }
  },
  "scripts": {
    "start": "node index.js",
    "app": "electron .",
    "build-win": "electron-builder --win && pkg ./ --targets latest-win-x64",
    "build-linux": "electron-builder --linux && pkg ./ --targets latest-linux-x64",
    "build-docker": "docker build -t emulatorjs-netplay-server ."
  },
  "dependencies": {
    "express": "^4.18.2",
    "killable": "^1.0.1",
    "socket.io": "^4.7.0"
  },
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "pkg": "^5.8.1"
  }
}
